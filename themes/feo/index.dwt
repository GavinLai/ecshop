</head>
<body>
<div id="rtWrap">
<!-- #BeginLibraryItem "/library/page_header.lbi" --><!-- #EndLibraryItem -->
  <div id="pageContent">
    <div class="main indexMain">
      
        <!-- START 广告位 -->
        <div id="banner">
        <ul>
          {foreach from=$ad_diy item=ad name=ad}
          <li class="b1" style="background:url('{$ad.imgcode}') center top no-repeat; <!--{if $smarty.foreach.ad.first}-->display:block;<!--{/if}-->" onclick="window.open('{$ad.imglink}','_blank');"></li>
          {/foreach}
        </ul>

        <div class="btn">
            {foreach from=$ad_diy item=ad name=ad2}
            <!--{if $smarty.foreach.ad2.first}-->
            <img src="{$theme_dir}/img/1.png">
            <!--{else}-->
            <img src="{$theme_dir}/img/2.png">
            <!--{/if}-->
            {/foreach}
        </div>
        </div>
        <script type="text/javascript">
        $(function (){
            var len=$("#banner li").length;
            var i=0;
            var lunhuan;
            var kuan=$('#banner').width();//$(window).width();
            $("#banner li").css('width',kuan);

            function huan()
            {   
                $("#banner li:eq("+i+")").siblings("li").hide();
                $("#banner li:eq("+i+")").show();
                $("#banner .btn img").attr('src', '{$theme_dir}/img/2.png');
                $("#banner .btn img").eq(i).attr('src', '{$theme_dir}/img/1.png');
                i=i+1
                if(i==len)
                {i=0}

            }
            lunhuan=setInterval(huan,4000);
            $('#banner .btn img').click(function(){
                clearInterval(lunhuan);
                var v=$(this).index();
                $("#banner li:eq("+v+")").siblings("li").hide();
                $("#banner li:eq("+v+")").show();
                $("#banner .btn img").attr('src', '{$theme_dir}/img/2.png');
                $("#banner .btn img").eq(v).attr('src', '{$theme_dir}/img/1.png');
                i=v+1
                if(i==len)
                {i=0}
                
                lunhuan=setInterval(huan,4000); 
            });
            
            
            $('#function li[class=list]').hover(
                function(){
                    $(this).addClass('hover');
                },
                
                function(){
                    $(this).removeClass('hover');
                }
            );


        });
        </script>
        <!-- END 广告位 -->

        <ul id="series">
          <li>
            <div class="description">
              <a href="" class="series_des">
                <p class="title1">精灵系列</p>
                <p class="title2">GENIUS SERIES</p>
              </a>
              <a href="" class="more">更多MORE</a>
            </div>
            <img src="{$theme_dir}/img/series_img_1.jpg" alt="" class="img_left" >
            <img src="{$theme_dir}/img/series_img_2.jpg" alt="" >
          </li>
          <li>
            <div class="description">
              <a href="" class="series_des">
                <p class="title1">精灵系列</p>
              <p class="title2">GENIUS SERIES</p>
              </a>
              <a href="" class="more">更多MORE</a>
            </div>
            <img src="{$theme_dir}/img/series_img_1.jpg" alt="" class="img_left">
            <img src="{$theme_dir}/img/series_img_2.jpg" alt="">
          </li>
          <li>
            <div class="description">
              <a href="" class="series_des">
                <p class="title1">精灵系列</p>
              <p class="title2">GENIUS SERIES</p>
              </a>
              <a href="" class="more">更多MORE</a>
            </div>
            <img src="{$theme_dir}/img/series_img_1.jpg" alt="" class="img_left">
            <img src="{$theme_dir}/img/series_img_2.jpg" alt="">
          </li>
          

        </ul>
      
    </div>
  </div>
  
